                                        <tr>
                                            <td>
                                                <div class="col-md-16">
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5 class="text-uppercase mb-0">Reset Passwort</h5>
                                                        </div>
                                                        <div class="list-group-item">
                                                            <div class="form-group row">
                                                            </div>

                                                        <label> Resend Password</label>
                                                            <div class="input-group">

                                                                <span class="input-group-text">
                                                                    <i class="	fas fa-portrait"></i>

                                                                </span>
                                                            <input placeholder="Resend Password" @bind="@resetpasswordmodel.ResendPassword" class="form-control" />
                                                                
                                                            </div>

                                                        <label>Reset Password</label>
                                                            <div class="input-group">

                                                                <span class="input-group-text">
                                                                    <i class="far fa-address-card "></i>
                                                                    <span class="bi-person"></span>
                                                                </span>
                                                            <input placeholder="Reset Password" @bind="@resetpasswordmodel.ResetPassword" class="form-control" />
                                                                

                                                            </div>


                                                        <label>Confirm Password</label>
                                                            <div class="input-group">

                                                                <span class="input-group-text">
                                                                    <i class="far fa-address-card "></i>
                                                                    <span class="bi-person"></span>
                                                                </span>
                                                            <input placeholder="Confirm Password" @bind="@resetpasswordmodel.ConfirmPassword" class="form-control" />
                                                           

