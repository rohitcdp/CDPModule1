                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
    </EditForm>
    </div>
</div>







@code {
    resetpasswordmodel resetpasswordmodel = new resetpasswordmodel();
    [Parameter]
    public List<User> UserList { get; set; }
    [Parameter]
    public string loginmessage{ get; set; }
    public string token = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        token = await localStorageService.GetItem<string>("token");
        UserList = await Reload();
    }

    public async Task<List<User>> Reload()
    {
        httpClient.DefaultRequestHeaders.Clear();
        httpClient.DefaultRequestHeaders.Add("Authorization", "Bearer " + token);
        var result = await httpClient.GetAsync("api/Account/GetAllUsers");
        return await result.Content.ReadFromJsonAsync<List<User>>();
    }
    public async Task submit()
    {
        if (resetpasswordmodel.ResendPassword != resetpasswordmodel.ConfirmPassword)
        {
            loginmessage = " password does not match";
        }
        var result = await httpClient.PostAsJsonAsync("api/Account/resetpassword",resetpasswordmodel);


    }
}
